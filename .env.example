# Code Agent MVP - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED: Essential Services
# =============================================================================

# ngrok Authentication Token (REQUIRED for external access)
# Get your token from: https://dashboard.ngrok.com/get-started/your-authtoken
NGROK_AUTHTOKEN=your_ngrok_authtoken_here

# =============================================================================
# OPTIONAL: LLM Services Configuration
# =============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Anthropic Claude API Configuration  
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-sonnet-20240229

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name

# =============================================================================
# OPTIONAL: Service Configuration
# =============================================================================

# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# Service URLs (usually auto-detected in Docker)
GATEWAY_URL=http://gateway:8080
ADAPTER_URL=http://adapter:8082
ORCHESTRATOR_URL=http://orchestrator:7071
LLM_PATCH_URL=http://llm-patch:8080
OLLAMA_URL=http://ollama:11434

# =============================================================================
# OPTIONAL: External Integrations
# =============================================================================

# Azure DevOps Integration
AZURE_DEVOPS_ORG=your_organization
AZURE_DEVOPS_PAT=your_personal_access_token

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here

# =============================================================================
# OPTIONAL: Monitoring Configuration
# =============================================================================

# Grafana Admin Password (default: admin123)
GRAFANA_ADMIN_PASSWORD=admin123

# Grafana API Token (optional, for automated dashboard setup)
# GRAFANA_API_TOKEN=your_grafana_api_token_here

# =============================================================================
# OPTIONAL: Development Settings
# =============================================================================

# ngrok Region (us, eu, ap, au, sa, jp, in)
NGROK_REGION=us

# Custom ngrok subdomain (requires ngrok Pro)
# NGROK_SUBDOMAIN=your-subdomain

# Enable/disable specific services
ENABLE_MONITORING=true
ENABLE_NGROK=true
ENABLE_LLM_PATCH=true
