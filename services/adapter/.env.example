# Adapter Service Environment Variables
# Copy to .env and customize

# Server Configuration
PORT=8080
NODE_ENV=development
LOG_LEVEL=info

# Azure DevOps Configuration
ADO_ORG=your-organization
ADO_PROJECT=your-project
ADO_TOKEN=your-personal-access-token

# Rate Limiting
RATE_SOFT_RPS=10
RATE_BURST_RPS=20

# Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=30000

# Git Configuration
GIT_USER_NAME=Code Agent Bot
GIT_USER_EMAIL=code-agent@yourcompany.com

# Patch Limits
MAX_PATCH_SIZE_BYTES=200000
MAX_FILES_IN_PATCH=50

# Developer Context
DEV_ID=dev

# Timeouts
ADO_REQUEST_TIMEOUT=30000
GIT_OPERATION_TIMEOUT=60000
